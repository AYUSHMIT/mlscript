    fun foo(x: A) = x
}
//│ class Room[A](name: string) {
//│   fun foo: (x: A,) -> A
//│ }

class BigRoom extends Room[bool]("big")
//│ class BigRoom {
//│   fun foo: (x: 'A,) -> 'A
//│ }
//│ where
//│   'A := bool

// * Note that this essentially infers Room[Bool]
class InferredRoom extends Room("infer") {
    fun foo(x) = x && true
}
//│ class InferredRoom {
//│   fun foo: bool -> bool
//│ }

(new InferredRoom) : Room['X]
//│ Room[bool]
//│ res
