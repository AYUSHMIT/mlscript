class Foo(x: int)
//│ class Foo(x: int)

let f = Foo(1)
//│ let f: Foo
//│ f
//│   = Foo {}

let f = new Foo(1)
//│ let f: Foo
//│ f
//│   = Foo {}

if f is Foo then 1 else 0
//│ 0 | 1
//│ res
//│     = 1

if f is Foo(a) then a else 0
//│ int
//│ res
//│     = 1


