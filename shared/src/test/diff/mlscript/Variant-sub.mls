class None: {}
class Some[A]: { v: A }
//│ Defined class None
//│ Defined class Some

def Some v = Some{v}
def None = None{}
//│ Some: ('v & 'A) -> (Some['A] with {v: 'v})
//│     = [Function: Some1]
//│ None: None
//│     = None {}

def flatMap = fun f -> fun opt ->
  case opt of { Some -> f opt.v | None -> opt }
//│ flatMap: ('a -> 'b) -> (forall 'c. (None & 'c | (Some[?] with {v: 'a})) -> ('b | 'c))
//│        = [Function: flatMap]

f x = Some x
flatMap f (Some 1)
flatMap f None
//│ f: ('v & 'A) -> (Some['A] with {v: 'v})
//│  = [Function: f]
//│ res: nothing
//│    = Some { v: 1 }
//│ res: None
//│    = None {}

:e
flatMap f "oops"
