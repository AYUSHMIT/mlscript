
def rcd = { x = 1 }
//│ rcd: {x: 1}

rcd with { y = 2 }
//│ res: {x: 1} & {y: 2}

rcd with { x = "oops" }
//│ res: {} & {x: "oops"}


def f r = r with { x = "oops" }
//│ f: 'a -> 'a\x & {x: "oops"}

f rcd
//│ res: {x: 1}\x & {x: "oops"}

f (rcd with { y = 2 })
//│ res: ({x: 1} & {y: 2})\x & {x: "oops"}


