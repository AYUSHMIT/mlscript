
def rcd = { x = 1 }
//│ rcd: {x: 1}

rcd with { y = 2 }
//│ res: {x: 1} & {y: 2}

rcd with { x = "oops" }
//│ res: {} & {x: "oops"}


def f r = r with { x = "oops" }
//│ f: 'a -> 'a\x & {x: "oops"}

def f a b = if true then a else b
//│ f: 'a -> 'a -> 'a

def f a b = (if true then a else b) with { x = "oops" }
//│ f: 'a -> 'a -> 'a\x & {x: "oops"}

def f a b = let tmp = a.x in (if true then a else b) with { x = "oops" }
//│ f: 'a & {x: anything} -> 'a -> 'a\x & {x: "oops"}


