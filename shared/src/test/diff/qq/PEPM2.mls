fun assertNotZero(x) =
  `if (x `== `0.0) then `(error) else x
fun checkedDiv = x `=> y `=> x `/ assertNotZero(y)
//│ fun assertNotZero: forall 'a 'b. Code[Num & 'a, 'b] -> Code['a, 'b]
//│ fun checkedDiv: Code[Num -> Num -> Num, nothing]

